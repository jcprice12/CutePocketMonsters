
{{> mynav}}

<h1>{{userPokemon.dataValues.username}}'s Backpack</h1>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
    <li data-target="#myCarousel" data-slide-to="1"></li>
    <li data-target="#myCarousel" data-slide-to="2"></li>
  </ol>

  <!-- Wrapper for each slides -->

  {{!-- User Pokemon 1 --}}
  <div class="carousel-inner">
    {{#each userPokemon.dataValues.Pokemons}}
      {{#if @first}}
        <div class="item active">
      {{else}}
        <div class="item">
      {{/if}}
          <div class="pokeName"> <strong>NAME:</strong> {{this.dataValues.Name}}</div><br>
          <div class="pokeSprite">
            <img src="/assets/images/sprites/{{this.dataValues.Number}}.png" style="width: 10%"><br>
          </div>
          <div class="heightWeight">
            <strong>TYPE 1:</strong> {{this.dataValues.Type_1}} <strong>TYPE 2: </strong> {{this.dataValues.Type_2}}<hr>
            <strong>HEIGHT(m):</strong> {{this.dataValues.Height_m}} <strong>WEIGHT(kg):</strong> {{this.dataValues.Weight_kg}}<hr>
          </div>
          <div class="pokeStats">
              <strong>HP:</strong>{{this.dataValues.HP}}  <strong> ATTACK:</strong> {{this.dataValues.Attack}} <strong> SPECIAL ATTACK:</strong> {{this.dataValues.Sp_Atk}}<hr>
              <strong>DEFENSE:</strong> {{this.dataValues.Defense}} <strong>SPECIAL DEFENSE:</strong> {{this.dataValues.Sp_Def}} <strong>SPEED: </strong>{{this.dataValues.Speed}}<hr>
          </div>
        </div>   
    {{/each}}


    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
      <i class="fa fa-caret-left fa-5x" aria-hidden="true"></i>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
      <i class="fa fa-caret-right fa-5x" aria-hidden="true"></i>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

